# Server Config
PORT=3000
NODE_ENV=development

# Database Config (MSSQL)
DB_HOST=localhost
DB_NAME=IFL_Workflow_DB
DB_USER=sa
DB_PASS=yourStrong(!)Password
DB_PORT=1433
DB_DIALECT=mssql

# Active Directory Config (LDAP)
# Use a service account for binding
AD_URL=ldap://your-domain-controller.local
AD_BASE_DN=DC=domain,DC=com
AD_USER=CN=ServiceAccount,CN=Users,DC=domain,DC=com
AD_PASSWORD=service_account_password
AD_DOMAIN=MYDOMAIN

# Email Config (SMTP - On-Prem Exchange)
SMTP_HOST=exchange.local
SMTP_PORT=25
SMTP_SECURE=false
# SMTP_USER=  # Leave empty if relay doesn't require auth
# SMTP_PASS=
SMTP_FROM=workflows@yourcompany.com
APP_URL=http://localhost:3000

# Security
JWT_SECRET=super_secret_jwt_key_change_in_prod
